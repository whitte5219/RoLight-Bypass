{
  "manifest_version": 3,
  "name": "RoLight Bypass",
  "version": "1.0",
  "description": "Roblox Game Bypass Tool",
  "permissions": [
    "cookies",
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "webRequest"
  ],
  "host_permissions": [
    "*://*.roblox.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.roblox.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
